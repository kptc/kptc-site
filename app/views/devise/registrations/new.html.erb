<h1>Register to Play!</h1>

<%= form_for(resource, as: resource_name, url: player_registration_path) do |f| %>
  <div class="form-group">
    <%= f.label :first_name, 'First Name', class: 'control-label' %>
    <%= f.text_field :first_name, class: 'form-control' %>
    <%= show_errors(@player, :first_name) %>
  </div>
  <div class="form-group">
    <%= f.label :last_name, 'Last Name', class: 'control-label' %>
    <%= f.text_field :last_name, class: 'form-control' %>
    <%= show_errors(@player, :last_name) %>
  </div>
  <div class="form-group">
    <%= f.label :email, class: 'control-label' %>
    <%= f.email_field :email, autofocus: true, class: 'form-control' %>
    <%= show_errors(@player, :email) %>
  </div>
  <div class="form-group">
    <%= f.label :phone, class: 'control-label' %>
    <%= f.text_field :phone, class: 'form-control' %>
    <%= show_errors(@player, :phone) %>
  </div>
  <div class="form-group">
    <%= f.label :password, class: 'control-label' %>
    <% if @validatable %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class: 'control-label' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <div class="form-group">
        <%= f.label :gender_id, class: 'control-label' %>
        <%= f.collection_select :gender_id, @genders, :id, :name,
          {include_blank: '--'},
          {class: 'form-control'}
        %>
        <%= show_errors(@player, :gender_id) %>
      </div>
    </div>
    <div class="col-xs-12">
      <%= f.button 'Register', {:type => 'submit', :class => 'btn btn-primary pull-right'} %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
