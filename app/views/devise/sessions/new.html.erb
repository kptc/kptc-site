<% content_for :body_class, 'log-in' %>
<div class="login-container">
<h1>Log In</h1>

<div class="login-pic"></div>

<%= form_for(resource, as: resource_name, url: player_session_path) do |f| %>
  
  <div class="form-group">
    <%= f.label :email, class: 'control-label' %>
    <%= f.email_field :email, autofocus: true, class: 'form-control' %>
    <%= show_errors(resource, :email) %>
  </div>
  
  <div class="form-group">
    <%= f.label :password, class: 'control-label' %>
    <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
    <%= show_errors(resource, :password) %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="checkbox">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>
  
  <%= f.button 'Log In', {:type => 'submit', :class => 'btn-primary pull-right'} %>
  
<% end %>

<%= render "devise/shared/links" %>
</div> 