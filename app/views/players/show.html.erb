<div class="row">
  <aside class="profile col-xs-24 col-sm-6 sidebar">
    <h1><%= @player.name %></h1>
    <div>
      <p><%= @player.email %></p>
      <p><%= @player.phone %></p>
    </div>
    <address>
      
    </address>
  </aside>
  
  <div class="col-xs-24 col-sm-18">
    
    <% if @upcoming_sessions && @registration_deadline && Time.now < @registration_deadline %>
      <div class="panel panel-default upcoming-sessions">
        <div class="panel-heading">
          <h2>Choose Your Sessions!</h2>
          <p>You have until <%= @registration_deadline.strftime("%B #{@registration_deadline.day.ordinalize}, %Y") %> to edit your preferences</p>
        </div>
        <div class="panel-body">
          <%= simple_form_for @player, url: player_sessions_select_path(@player), html: {method: 'patch'} do |f| %>
            <% @upcoming_sessions.each do |session| %>
              <% ps = @player.player_sessions.where(session_id: session.id).first_or_initialize %>
              
              <%= f.fields_for :player_sessions, ps do |ff| %>
                <div class="row">
                <div class="col-xs-24 col-sm-12">
                  <div class="checkbox">
                    <%= ff.label :is_in_session do %>
                      <%= ff.check_box :is_in_session, class: 'icheck', data: {skin: 'square', color: 'green'} %>
                      <%= ff.object.session.name %>
                    <% end %>
                  </div>
                </div>
                <div class="col-xs-offset-3 col-xs-18 col-sm-offset-0 col-sm-12">
                  <div class="checkbox">
                    <%= ff.label :is_sub do %>
                      <%= ff.check_box :is_sub, class: 'icheck', data: {skin: 'square', color: 'green'} %>
                      Sub
                    <% end %>
                  </div>
                </div>
                <%= ff.hidden_field :session_id %>
              </div>
              <% end %>
            <% end %>
            <%= submit_tag 'Save', class: 'btn-primary' %>
          <% end %>
        </div>
      </div> <!-- panel -->
    <% end %>
    
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2>Current Sessions</h2>
      </div>
      <table class="table">
        <thead>
          <tr>
            <th>Session</th>
            <th>Dates</th>
            <th>Rank</th>
          </tr>
        </thead>
        <tbody>
          <%= render @current_sessions %>
        </tbody>
      </table>
      <div class="panel-body">
        <div id="calendar" data-url="<%= calendar_path(@player.id) %>">
        </div>
      </div>
    </div> <!-- panel -->
    
  </div>
</div>