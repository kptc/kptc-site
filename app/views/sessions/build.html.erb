<div class="row">
  <div class=col-xs-24>
    
    <div class="row">
      <div class="col-xs-12">
        <h1>Build Session</h1>
        <h2><%= @session.name %></h2>
        <p><%= @session.dates %></p>
      </div>
      <div class="col-xs-12">
        <%= link_to raw(fa_icon 'reply'), :back, class: 'btn-primary pull-right', title: 'Back' %>
      </div>
    </div>
    
    <div class="row">
      <div class="col-xs-8">
        <%= simple_form_for @session, url: update_session_players_path do |f| %>
          <%=
            f.collection_check_boxes(:player_ids, @available_players, :id, :name, item_wrapper_tag: :div, item_wrapper_class: 'checkbox') do |c|
              c.check_box(class: 'icheck', data: {skin: 'square', color: 'green'}) + c.text
            end
          %>
          <%= f.submit 'Save', class: 'btn-primary' %>
        <% end %>
      </div>
      <div class="col-xs-8">
        <ul class="list-group">
          <% @session.session_times.each do |session_time| %>
            <li class="list-group-item">
              <%= session_time.date %> - <%= session_time.time %>
            </li>
          <% end %>
        </ul>
      </div>
      <div class="col-xs-8">
        <ul class="list-group">
          <% @available_players.each do |player| %>
            <li class="list-group-item">
              <%= raw(fa_icon 'bars', text: ' ' + player.name) %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
      
  </div>
</div>