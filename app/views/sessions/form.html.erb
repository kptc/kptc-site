<h1>Add / Edit Session</h1>

<%= form_for @session do |f| %>
  <div class="form-group">
    <%= f.label :day_of_week, 'Day of the Week', class: 'control-label' %>
    <%= f.collection_select :day_of_week, @days, :first, :last,
      {include_blank: '--'},
      {class: 'form-control'}
    %>
    <%= show_errors(@session, :day_of_week) %>
  </div>
  <div class="form-group">
    <%= f.label :start_date, 'Start Date', class: 'control-label' %>
    <%= f.text_field :start_date, class: 'form-control' %>
    <%= show_errors(@session, :start_date) %>
  </div>
  <div class="form-group">
    <%= f.label :end_date, 'End Date', class: 'control-label' %>
    <%= f.text_field :end_date, class: 'form-control' %>
    <%= show_errors(@session, :end_date) %>
  </div>
  <div class="form-group">
    <%= f.label :start_time, 'Start Time', class: 'control-label' %>
    <%= f.text_field :start_time, class: 'form-control' %>
    <%= show_errors(@session, :start_time) %>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <div class="form-group">
        <%= f.label :gender_id, class: 'control-label' %>
        <%= f.collection_select :gender_id, @genders, :id, :name,
          {include_blank: '--'},
          {class: 'form-control'}
        %>
        <%= show_errors(@session, :gender_id) %>
      </div>
    </div>
    <div class="col-xs-12">
      <div class="form-group">
        <%= f.label :session_type_id, 'Session Type', class: 'control-label' %>
        <%= f.collection_select :session_type_id, @session_types, :id, :name,
          {include_blank: '--'},
          {class: 'form-control'}
        %>
        <%= show_errors(@session, :session_type_id) %>
      </div>
    </div>
    <%= f.button 'Save', {:type => 'submit', :class => 'btn btn-primary pull-right'} %>
  </div>
<% end %>