<h1>Add / Edit Session</h1>

<%= form_for @session do |f| %>
  <div class="row">
    <div class="col-xs-12">
      <div class="form-group">
        <%= f.label :day_of_week, 'Day of the Week', class: 'control-label' %>
        <%= f.collection_select :day_of_week, Date::DAYNAMES.zip((0..6).to_a), :last, :first,
          {include_blank: '--'},
          {class: 'form-control'}
        %>
        <%= show_errors(@session, :day_of_week) %>
      </div>
    </div>
    <div class="col-xs-12">
      <div class="form-group">
        <%= f.label :time_of_day, 'Time of Day', class: 'control-label' %>
        <%= f.collection_select :time_of_day, @times, :first, :last,
          {include_blank: '--'},
          {class: 'form-control'}
        %>
        <%= show_errors(@session, :time_of_day) %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-24 col-sm-12 col-md-6">
      <div class="form-group">
        <%= f.label :start_date, 'Start Date', class: 'control-label' %>
        <%= f.text_field :start_date, class: 'form-control datepicker' %>
        <%= show_errors(@session, :start_date) %>
      </div>
    </div>
    <div class="col-xs-24 col-sm-12 col-md-6">
      <div class="form-group">
        <%= f.label :end_date, 'End Date', class: 'control-label' %>
        <%= f.text_field :end_date, class: 'form-control datepicker' %>
        <%= show_errors(@session, :end_date) %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <div class="form-group">
        <%= f.label :gender, class: 'control-label' %>
        <%= f.collection_select :gender, @genders, :first, :last,
          {include_blank: '--'},
          {class: 'form-control'}
        %>
        <%= show_errors(@session, :gender) %>
      </div>
    </div>
    <div class="col-xs-12">
      <div class="form-group">
        <%= f.label :session_type_id, 'Session Type', class: 'control-label' %>
        <%= f.collection_select :session_type_id, @session_types, :id, :name,
          {include_blank: '--'},
          {class: 'form-control'}
        %>
        <%= show_errors(@session, :session_type_id) %>
      </div>
    </div>
  </div>
  <%= f.button 'Save', {:type => 'submit', :class => 'btn-primary pull-right'} %>
<% end %>